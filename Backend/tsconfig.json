{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@config/*"    : ["config/*"],
      "@eums/*"      : ["enums/*"],
      "@controllers/*" : ["controllers/*"],
      "@models/*" : ["models/*"],
      "@util/*" : ["util/*"],
      "@routes/*" : ["routes/*"]
    },

    "esModuleInterop": true,
    "strict": true,
  }
}
